#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int num, sum = 0;

    cout << "Enter a number: ";
    cin >> num;

    while (num>0)
    {
        sum = 0;
        for (int i=1; i <=num; i++)
        {
            sum += i;
        }
        cout << "The sum of all whole numbers from 1 to " << num << " is: " << sum << endl;
        cout << "Enter a number: ";
        cin >> num;

    }

    cout << "Thank you!" << endl;

    _getch();
    return 0;
}
